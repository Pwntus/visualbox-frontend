html
  overflow-y auto !important

a
  text-decoration none

input:-webkit-autofill
  -webkit-box-shadow: 0 0 0 30px #424242 inset

input:-webkit-autofill
  -webkit-text-fill-color: white !important

.index-icon
  position absolute
  top 0
  right 0
  font-size 400px
  line-height 250px
  color rgba(255, 255, 255, .05) !important // rgba(76, 175, 80, .05) !important

.theme--light
  .index-icon
    color rgba(0, 0, 0, .05) !important

.markdown
  hr
    margin-bottom 16px
    border-color hsla(0, 0%, 100%, .12) !important
    height 0
    max-height 0
    border solid
    border-width thin 0 0
  h1, h2, h3, h4, h5, h6
    margin-bottom 16px
    font-weight 400
  ul, ol
    margin-bottom 16px
  code, kbd
    padding 1px 5px
    background #242424
    color #4caf50
    font-weight unset
    box-shadow none
    -webkit-box-shadow none

    &:after, &:before
      content unset
      letter-spacing unset
  pre code
    width 100%
    padding 16px
    margin-bottom 16px
  img
    max-width 100%

.theme--light
  .markdown
    code, kbd
      background rgba(0, 0, 0, .1)
      color #333

.vc-chrome
  width unset !important
  font-family inherit !important
  border-radius 0 0 8px 8px !important

  .vc-chrome-body
    border-radius 0 0 4px 4px

    .vc-checkerboard
      background-repeat repeat

.theme--light
  .vc-chrome
    box-shadow unset

.theme--dark
  .vc-chrome
    .vc-chrome-body
      background-color #424242

      .vc-chrome-fields
        .vc-input__input, .vc-input__label
          color #FFF !important

      .vc-chrome-toggle-icon
        path
          fill #FFF

      .vc-chrome-toggle-icon-highlight
        background #272727

#data-source-tree
  .v-treeview-node__root
    cursor pointer

  span
    &.property
      color #4caf50
    &.number, &.boolean
      color #2196f3
    &.string
      color #ff5252
    &.object
      color #9a9a9a
    &.hidden
      pointer-events #9a9a9a
